{
  "name": "@rxstack/mongoose-service",
  "version": "0.1.3",
  "description": "RxStack Mongoose Service",
  "private": false,
  "author": "Nikolay Georgiev <symfonist@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/rxstack/mongoose-service.git"
  },
  "engines": {
    "node": ">=9"
  },
  "keywords": [
    "rxstack",
    "mongodb",
    "mongoose"
  ],
  "main": "dist/index",
  "typings": "dist/index",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && tsc -p .",
    "clean": "rm -rf dist",
    "lint": "tslint --project tsconfig.json --format stylish",
    "mocha": "mocha --opts mocha.opts",
    "coverage": "nyc npm run mocha",
    "test": "npm run lint && npm run coverage"
  },
  "peerDependencies": {
    "@rxstack/core": "^0.1",
    "@rxstack/data-fixtures": "^0.1",
    "@rxstack/exceptions": "^0.1",
    "@rxstack/platform": "^0.1",
    "@rxstack/query-filter": "^0.1",
    "@rxstack/security": "^0.1"
  },
  "dependencies": {
    "injection-js": "^2.1",
    "reflect-metadata": "^0.1",
    "@types/mongodb": "^3.1.19",
    "@types/mongoose": "^5.3.10",
    "mongodb": "^3.1.13",
    "mongoose": "^4.13.18"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^2.2.48",
    "@types/node": "^7.10.2",
    "chai": "3.5.0",
    "dotenv": "^6.2.0",
    "istanbul": "0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^11.0.3",
    "should": "^13.2.3",
    "sinon": "^6.3.4",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.1.0",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2",
    "uuid": "^3.3.2"
  },
  "bugs": {
    "url": "https://github.com/rxstack/mongoose-service/issues"
  },
  "homepage": "https://github.com/rxstack/mongoose-service",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "nyc": {
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "./test/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
